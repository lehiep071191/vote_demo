<div id="vote_form">
  <% if user_signed_in? %>
    <% if (current_user.voted_down_on? post) || (!ActsAsVotable::Vote.find_by(votable_id: post.id).present?) %>
      <%= link_to post_votes_path(post), method: :post, remote: true do %>
        <span class="glyphicon glyphicon-heart-empty"></span>
      <% end %>
    <% else %>
      <%= link_to post_vote_path(post,0), method: :delete, remote: true do %>
        <span class="glyphicon glyphicon-heart"></span>
      <% end %>
    <% end %>
  <% end %>
  <%= t "posts.show.like" %> <%= post.get_upvotes.size %>
  <% post.votes_for.up.by_type(User).voters.each do |user| %>
    <%= user.email %>
  <% end %>
</div>
