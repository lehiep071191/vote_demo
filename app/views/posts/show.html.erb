<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<p>
  <strong>Tags:</strong>
  <%= raw @post.tag_list.map { |t| link_to t, tag_path(t), class: "btn-sm btn-default" }.join(' ') %>
</p>

<%= render "vote_form", post: @post %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
