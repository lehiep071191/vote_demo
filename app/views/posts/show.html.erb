<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<p>
  <strong>Tags:</strong>
  <%= raw @post.tag_list.map { |t| link_to t, tag_path(t), class: "btn-sm btn-default" }.join(' ') %>
</p>

<%= render "vote_form", post: @post %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<% if user_signed_in? %>
  <span id="form-comment">
    <%= form_for @comment , remote: true do |f| %>
      <div class="field">
        <%= f.hidden_field :post_id, value: @post.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.text_area :content, placeholder: t("posts.show.compose"),
          required: true, class: "form-control" %>
      </div>
      <%= f.submit t("posts.show.comment"), class: "btn btn-custom2" %>
    <% end %>
  </span>
<% end %>
<span id="form-comment<%= @post.id %>">
  <%= render @comments %>
</span>
